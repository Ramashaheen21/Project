<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- Fixed header section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/black"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_headerLogo"
            android:layout_width="128dp"
            android:layout_height="62dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logoblack" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable content section -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry"
                android:text="Add Personal Info" />

            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry"
                android:hint="First Name" />

            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry"
                android:hint="Last Name" />

            <EditText
                android:id="@+id/id_number"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="ID Number"
                android:layout_marginTop="15dp"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry"
                android:inputType="number" />

            <EditText
                android:id="@+id/birthday"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:focusable="false"
                android:hint="Birthday"
                android:paddingStart="10dp" />

            <EditText
                android:id="@+id/start_date"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:focusable="false"
                android:hint="Start Date"
                android:paddingStart="10dp" />

            <EditText
                android:id="@+id/end_date"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="End Date"
                android:focusable="false"
                android:layout_marginTop="15dp"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry"
                android:clickable="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:text="Do you agree to our terms and conditions?"
                    android:textSize="16sp"
                    tools:ignore="RtlSymmetry" />

                <Switch
                    android:id="@+id/switch_terms"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_add_payment"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Add Payment Method"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/black"
                android:layout_marginTop="15dp"
                android:visibility="gone" />

            <ListView
                android:id="@+id/card_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry"
                android:layout_marginTop="15dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:paddingStart="10dp"
                    android:text="Add Payment Info"
                    android:visibility="gone"
                    tools:ignore="RtlSymmetry" />


                <!-- Credit card input fields -->
                <EditText
                    android:id="@+id/card_number_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:hint="Card Number"
                    android:paddingStart="10dp"
                    tools:ignore="RtlSymmetry"
                    android:inputType="number"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/card_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:hint="Exp Date"
                    android:paddingStart="10dp"
                    tools:ignore="RtlSymmetry"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/card_cvv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:hint="CVV"
                    android:inputType="number"
                    android:paddingStart="10dp"
                    tools:ignore="RtlSymmetry"
                    android:visibility="gone"/>


                <!-- Checkbox to save payment info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/save_payment_info_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        tools:ignore="RtlSymmetry"
                        android:text="Save this payment information for future purchases"
                        android:visibility="gone"/>

                </LinearLayout>

                <!-- Purchase button -->
                <Button
                    android:id="@+id/btn_purchase"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/black"
                    android:text="Rent"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
