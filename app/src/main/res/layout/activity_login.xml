<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/car_background"
    tools:context=".ActivityPages.Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <Space
                android:id="@+id/space"
                android:layout_width="wrap_content"
                android:layout_height="190dp" />

            <TextView
                android:id="@+id/login_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/log_in_string_log_inn"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/username_txt"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_custom"
                android:ems="10"
                android:gravity="center"
                android:hint="Username"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="#FAF6F6"
                android:textColorHighlight="#F3F3F3"
                android:textColorHint="#E4DEDE"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/pw_txt"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/login_custom"
                android:ems="10"
                android:gravity="center"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#FAF6F6"
                android:textColorHighlight="#F3F3F3"
                android:textColorHint="#E4DEDE"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/login_btn"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elegantTextHeight="true"
                android:text="@string/log_in_string_log_in"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#2A9E9A9A"
                android:background="@drawable/login_custom"
                app:cornerRadius="10dp" />

            <TextView
                android:id="@+id/registration_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="monospace"
                android:text="@string/don_t_have_an_account_string_log_in"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/register_btn"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="52dp"
                android:elegantTextHeight="true"
                android:text="@string/register_string_log_in"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/login_custom"
                android:backgroundTint="#2A9E9A9A"
                app:cornerRadius="10dp" />

            <Space
                android:id="@+id/space_bottom"
                android:layout_width="wrap_content"
                android:layout_height="190dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
