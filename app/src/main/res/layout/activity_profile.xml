    <TextView
        android:id="@+id/updateInfo"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:text="Click To Find more Info About Us!"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="359dp"
        android:layout_height="280dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@color/Lightest">

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="54dp"
                android:layout_height="59dp"
                android:layout_margin="1dp"
                android:background="@drawable/name_tag"

                app:srcCompat="@drawable/name_tag" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="48dp"
                android:layout_height="43dp"
                android:layout_margin="5dp"
                android:layout_marginTop="80dp"
                android:paddingTop="5dp"
                app:srcCompat="@drawable/email" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="48dp"
                android:layout_height="43dp"
                android:layout_margin="5dp"
                android:layout_marginTop="80dp"
                android:paddingTop="5dp"
                app:srcCompat="@drawable/call" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="48dp"
                android:layout_height="43dp"
                android:paddingTop="5dp"
                app:srcCompat="@drawable/gender" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="48dp"
                android:layout_height="43dp"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/birthday" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="122dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fnameLable"
                android:layout_height="35dp"
                android:layout_width="120dp"
                android:text="First name"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_height="35dp"
                android:layout_width="120dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Last name" />

            <TextView
                android:id="@+id/emailLable"
                android:layout_height="50dp"
                android:layout_width="120dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Email" />

            <TextView
                android:id="@+id/phoneLable"
                android:layout_height="50dp"
                android:layout_width="120dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Phone number" />

            <TextView
                android:id="@+id/citiLable"
                android:layout_height="50dp"
                android:layout_width="120dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Gender" />

            <TextView
                android:id="@+id/BODlable"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Date of birth"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fnametxt"
                android:layout_width="170dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/lnametxt"
                android:layout_height="35dp"
                android:layout_width="170dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/emailtxt"
                android:layout_height="50dp"
                android:layout_width="170dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phonetxt"
                android:layout_height="50dp"
                android:layout_width="170dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gendertxt"
                android:layout_height="50dp"
                android:layout_width="170dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dobtxt"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>





